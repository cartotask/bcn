{
  "version": 8,
  "name": "Dark Matter",
  "sources": {
    "Districts": {
      "type": "geojson",
      "data": "https://raw.githubusercontent.com/cartotask/bcn/refs/heads/main/BCNBoundaries.geojson"
    },
    "BCNINS": {
      "type": "geojson",
      "data": "https://raw.githubusercontent.com/cartotask/bcn/refs/heads/main/export.geojson"
    },
    "StopsNA": {
      "type": "geojson",
      "data": "https://raw.githubusercontent.com/cartotask/bcn/refs/heads/main/StopsNA.geojson"
    },
    "MetroAccesibility": {
      "type": "geojson",
      "data": "https://raw.githubusercontent.com/cartotask/bcn/refs/heads/main/StopsAcc.geojson"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#f9f9f9" }
    },
    {
      "id": "districts-fill",
      "type": "fill",
      "source": "Districts",
      "paint": {
        "fill-color": "#e0e0e0",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "districts-line",
      "type": "line",
      "source": "Districts",
      "paint": {
        "line-color": "#888",
        "line-width": 2
      }
    },
    {
      "id": "districts-labels",
      "type": "symbol",
      "source": "Districts",
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Bold", "Arial Unicode MS Bold"],
        "text-size": {
          "base": 1,
          "stops": [
            [10, 12],
            [14, 16]
          ]
        }
      },
      "paint": {
        "text-color": "#000",
        "text-halo-color": "#fff",
        "text-halo-width": 1
      }
    },
    {
      "id": "institutions",
      "type": "circle",
      "source": "BCNINS",
      "filter": ["==", ["get", "type"], "institution"],
      "paint": {
        "circle-color": "#ff0a25",
        "circle-radius": {
          "base": 1,
          "stops": [
            [10, 4],
            [14, 8]
          ]
        },
        "circle-opacity": 0.8
      }
    },
    {
      "id": "accessible-stops",
      "type": "circle",
      "source": "MetroAccesibility",
      "filter": ["==", ["get", "accessible"], "yes"],
      "paint": {
        "circle-color": "#0039ff",
        "circle-radius": {
          "base": 1,
          "stops": [
            [10, 3],
            [14, 6]
          ]
        },
        "circle-opacity": 0.8
      }
    },
    {
      "id": "non-accessible-stops",
      "type": "circle",
      "source": "StopsNA",
      "filter": ["==", ["get", "accessible"], "no"],
      "paint": {
        "circle-color": "#000000",
        "circle-radius": {
          "base": 1,
          "stops": [
            [10, 3],
            [14, 6]
          ]
        },
        "circle-opacity": 0.8
      }
    }
  ]
}
